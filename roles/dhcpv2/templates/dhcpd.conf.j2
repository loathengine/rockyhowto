{{ ansible_managed | comment }}
default-lease-time {{ dhcpd_default_lease_time }};
max-lease-time {{ dhcpd_max_lease_time }};
option subnet-mask {{ tier1_subnet }};
option broadcast-address {{ tier1_broadcast }};
option routers {{ tier1_gateway_server }};
option domain-name-servers {{ tier1_dns_server | join(', ') }};
option domain-search "{{ tier1_domain_name }}";
subnet {{ subnet.network }} netmask {{ subnet.netmask }} {
  range {{ subnet.range_start }} {{ subnet.range_end }};}
filename "{{ dhcpd_filename }}";
next-server {{ dhcpd_next_server }};

{% for host in dhcp_fixed %}
host {{ hosts }} {
    hardware ethernet    {{ mac }}
    fixed address        {{ ip }}
    option host-name     "{{ hosts}}"; }
{% endfor %}

